<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>drag</title>
  <script type="text/javascript">
    window.onload = function () {
      function getScroll(value){
        var html = document.documentElement;
        var body = document.body;
        console.log(body["scroll"+value] || html["scroll"+value]);
        return body["scroll"+value] || html["scroll"+value];
      }
      function drag(obj) {
        obj.onmousedown = function (event) {
          obj.setCapture && obj.setCapture();
          event = event || window.event;
          var left = obj.offsetLeft;
          var top = obj.offsetTop;
          var xd = event.clientX + getScroll("Left") - left;
          var yd = event.clientY + getScroll("Top") - top;
          document.onmousemove = function (event) {
            event = event || window.event;
            var newLeft = event.clientX + getScroll("Left")- xd;
            var newTop = event.clientY + getScroll("Top") - yd;
            obj.style.left = newLeft + "px";
            obj.style.top = newTop + "px";
          };
          document.onmouseup = function () {
            document.onmousemove = null;
            document.onmouseup = null;
            obj.releaseCapture && obj.releaseCapture();
          };
          return false;
        };
      }

      var div1 = document.getElementById("div1");
      var div2 = document.getElementById("div2");
      var img1 = document.getElementById("img1");

      drag(div1);
      drag(div2);
      drag(img1);
    }
  </script>
  <style type="text/css">
    #div1, #div2, #img1{
      position: absolute;
    }
    #div1{
      width: 50px;
      height: 50px;
      background-color: lightblue;
    }
    #div2{
      width: 100px;
      height: 100px;
      background-color: cadetblue;
      top: 50px;
    }
    #img1{
      top: 150px;
    }
  </style>
</head>
<body>
  <div id="div1"></div>
  <div id="div2"></div>
  <img id="img1" src="img/1.jpg"/>
</body>
</html>
